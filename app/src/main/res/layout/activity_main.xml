<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="nz.sheehan.calculator.MainActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textViewStored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:ellipsize="start"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewResult"
                android:layout_span="4"
                android:cursorVisible="false"
                android:ellipsize="start"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/buttonC"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/grey_button"
                android:onClick="onButtonClear"
                android:text="C"
                android:textSize="30sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/buttonPercent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/grey_button"
                android:onClick="onButtonPercent"
                android:text="%"
                android:textSize="30sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/buttonBackspace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/grey_button"
                android:onClick="onButtonBackspace"
                android:text="\u2190"
                android:textSize="30sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/button"
                android:onClick="onButtonDivide"
                android:text="\u00F7"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:typeface="sans" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/button7"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/grey_button"
                android:onClick="onButton7"
                android:text="7"
                android:textSize="30sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/button8"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/grey_button"
                android:onClick="onButton8"
                android:text="8"
                android:textSize="30sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/button9"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/grey_button"
                android:onClick="onButton9"
                android:text="9"
                android:textSize="30sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/button"
                android:onClick="onButtonMultiply"
                android:text="\u00D7"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:typeface="sans" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/button4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/grey_button"
                android:onClick="onButton4"
                android:text="4"
                android:textSize="30sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/button5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/grey_button"
                android:onClick="onButton5"
                android:text="5"
                android:textSize="30sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/button6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/grey_button"
                android:onClick="onButton6"
                android:text="6"
                android:textSize="30sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/buttonSubtract"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/button"
                android:onClick="onButtonSubtract"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:typeface="sans" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/button1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/grey_button"
                android:onClick="onButton1"
                android:text="1"
                android:textSize="30sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/grey_button"
                android:onClick="onButton2"
                android:text="2"
                android:textSize="30sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/button3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/grey_button"
                android:onClick="onButton3"
                android:text="3"
                android:textSize="30sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/button"
                android:onClick="onButtonAdd"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:typeface="sans" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/button0"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_span="2"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/grey_button"
                android:onClick="onButton0"
                android:text="0"
                android:textAlignment="inherit"
                android:textSize="30sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/buttonDecimal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/grey_button"
                android:onClick="onButtonDecimal"
                android:text="."
                android:textSize="30sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/buttonEquals"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:width="0dip"
                android:background="@drawable/button"
                android:onClick="onButtonEquals"
                android:text="="
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:typeface="sans" />
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>
